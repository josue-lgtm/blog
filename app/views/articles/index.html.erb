<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic&display=swap" rel="stylesheet">

    <style>
        /* General page styles */
        body {
            font-family: 'Lato', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        #page-top {
            background-color: #ffffff;
            margin: 40px auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
        }

        h1 {
            color: #007bff;
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 20px;
            font-size: 2em;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Action buttons styling */
        .action-links a {
            color: #ffffff;
            background-color: #007bff;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            margin: 5px;
            font-weight: bold;
        }

        .action-links a:hover {
            background-color: #0056b3;
        }

        .action-links .destroy {
            background-color: #e74c3c;
        }

        .action-links .destroy:hover {
            background-color: #c0392b;
        }

        /* Links */
        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            #page-top {
                padding: 20px;
            }

            table {
                font-size: 0.9em;
            }

            th, td {
                padding: 10px;
            }
        }
    </style>
</head>
<body id="page-top">
    <div id="page-top">
    <%= button_to 'Cerrar sesion', destroy_user_session_path, method: :delete %>
    <%= link_to 'crear', new_article_path(@articles), class: 'btn btn-edit' %>
        <h1>Listing Articles</h1>

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Text</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @articles.each do |article| %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.text %></td>
                        <td class="action-links">
                            <%= link_to 'Show', article_path(article), class: 'btn btn-show' %>
                            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-edit' %>
                            <%= button_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn destroy' %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</body>
</html>
