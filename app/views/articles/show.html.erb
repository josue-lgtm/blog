<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic&display=swap" rel="stylesheet">

    <style>
        /* General page styles */
        body {
            font-family: 'Lato', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fa;
            color: #333;
        }

        #page-top {
            background-color: #ffffff;
            margin: 40px auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

        h2 {
            color: #007bff;
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 25px;
            font-size: 1.8em;
        }

        /* Article styling */
        .article-title {
            font-size: 1.8em;
            color: #333;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .article-text {
            font-size: 1.2em;
            color: #666;
            line-height: 1.8;
            margin-bottom: 30px;
        }

        .article-text strong {
            font-weight: bold;
            color: #333;
        }

        /* Comments section */
        .comments {
            margin-top: 40px;
        }

        .comments h3 {
            font-size: 1.3em;
            color: #333;
            margin-bottom: 20px;
        }

        .comment-item {
            background-color: #f9f9f9;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .comment-item p {
            font-size: 1em;
            color: #555;
            line-height: 1.5;
        }

        .comment-item strong {
            font-weight: bold;
            color: #333;
        }

        /* Comment form */
        .comment-form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        .comment-form input, .comment-form textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1.1em;
            background-color: #f9f9f9;
            box-sizing: border-box;
        }

        .comment-form textarea {
            height: 150px;
        }

        .comment-form button {
            background-color: #007bff;
            color: #ffffff;
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1.1em;
            transition: background-color 0.3s ease;
        }

        .comment-form button:hover {
            background-color: #0056b3;
        }

        /* Links */
        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            #page-top {
                margin: 20px;
                padding: 15px;
            }

            .article-title {
                font-size: 1.6em;
            }

            .article-text {
                font-size: 1.1em;
            }
        }
    </style>
</head>
<body id="page-top">

    <div id="page-top">
        <!-- Article Title -->
        <div class="article-title">
            <%= @article.title %>
        </div>

        <!-- Article Text -->
        <div class="article-text">
            <%= @article.text %>
        </div>

        <!-- Comments Section -->
        <h2>Comments</h2>
        <div class="comments">
            <%= render @article.comments %>
        </div>

        <!-- Comment Form -->
        <h2>Add a Comment:</h2>
        <div class="comment-form">
            <%= render 'comments/form' %>
        </div>

        <!-- Links -->
        <div class="links">
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-edit' %> | 
            <%= link_to 'Back', articles_path, class: 'btn btn-back' %>
        </div>
    </div>

</body>
</html>
